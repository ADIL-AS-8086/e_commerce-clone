<%- include('../partials/userHeader')%>
<link rel="stylesheet" href="/style/loginpage.css">

<div class="container">
   <div class="row">
     <div class="col-md-6 left-box">

      <a href="/"> <button class="btn btn-light back-to-home">Back to Home</button></a>
       <div class="featured-image">
         <img src="https://img.freepik.com/free-vector/sign-concept-illustration_114360-5267.jpg?size=626&ext=jpg&ga=GA1.1.1352287033.1694671258&semt=sph"
           class="img-fluid">
       </div>
     </div>
     <div class="col-md-6 mt-5">
      <div id="first">
        <div class="myform form m-auto">
          <div class="logo mb-3">
            <div class="col-md-12 text-center">
              <h1>LOGIN</h1>
            </div>
          </div>
          <% if (message) { %>
            <div class="alert alert-danger" role="alert">
              <%= message %>
            </div>
          <% } %>
          <form action="/user/login" method="post" name="login">
            <div class="form-group">
              <label for="exampleInputEmail1">Email address</label>
              <input type="email" name="email" class="form-control" id="email" aria-describedby="emailHelp"
                placeholder="Enter email" value="muhammedadilas123@gmail.com" required>
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Password</label>
              <input type="password" name="password" value="Adil@123" id="password" class="form-control" aria-describedby="emailHelp"
                placeholder="Enter Password">
            </div>
            <div class="form-group mt-3">
              <a href="/user/forgetPass"><button type="button" style="margin-left: 150px; text-decoration: none;" class="btn btn-link" data-bs-toggle="modal" data-bs-target="#forgotPasswordModal">
                Forgot password?
              </button></a>
            </div>
             <div class="col-md-12 text-center ">
              
               <button id="login-button" type="submit" class="btn btn-block form-control">Login</button>
             </div>
             <div class="col-md-12 ">
               <div class="login-or">
                 <hr class="hr-or">
               </div>
             </div>
             <div class="col-md-12 mb-3">
               <a href="" id="google-login-button" class="btn btn-white text-dark form-control">
              WELCOME</a>
             </div>
             <div class="form-group">
               <p class="text-center">Don't have account? <a href="/user/signup" id="signup">Sign up</a></p>
             </div>
           </form>
 

         </div>
       </div>
     </div>
   </div>
 </div>



 <%- include('../partials/userFooter')%>